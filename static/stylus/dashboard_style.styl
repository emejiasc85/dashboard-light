@import "nib"
@import "cols"
vendor-prefixes = webkit o ms moz official
// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-o-animation parametro
// 	-ms-animation parametro
// 	animation parametro
/*utilidades*/
azul = #4A72B0
.u-float-none
	float none
.u-float-left
	float left
.u-float-right
	float right
.u-bg-black-light
	background-color rgba(black, .9)
.u-icon-span
	background #f00
	border-radius 2px
	box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
	font-size .6rem
	line-height 100%
	padding 2px 3px 3px
	position absolute
	right 5px
	top 4px
.u-display-none
	display none
.u-position-relative
	position relative
.u-text-align-center
	text-align center
.u-center-box
	margin 0 auto
.u-display-block
	display block
	
body
	/*background #2B6474*/
	background url('../skins/skin-blue.jpg')
	background-attachment fixed
	background-size 100% 100%
	color #fff
	font-size 16px
	text-shadow 0 0 3px rgba(255,255,255,0.4)
.Header
	border-bottom 1px solid rgba(255,255,255,0.3)
	font-size 0
	position relative
.Header-box
	display block
	height 3rem
	position relative
/*botom que activa o desactiva el main menu*/
.Header-DropBottom
	background-color rgba(black, .5)
	color white
	display inline-block
	font-size 1.5rem
	line-height 3rem
	text-align center
	text-decoration none
	text-shadow none
	transition .3s background
	width 3rem
	&:hover
		background black
/* espacio de nombre de la marca e icono*/		
.Header-brand
	background-color rgba(black, .23)
	color white
	display inline-block
	font-size 1.2rem
	left 3rem
	line-height 3rem
	padding 0 1rem
	position absolute
	right 0
	text-decoration none
	transition .3s color
	vertical-align top
	&:hover
		color yellow
/*estilos a los menus que se encuentran en el header*/
.HeaderNav
	display inline-block
	position relative
	vertical-align top
.HeaderNav-list
	display block
	height 3rem
	padding 0
.HeaderNav-item
	display inline-block
	font-size 1rem
	height 3rem
	text-align center
	vertical-align top
	width 3rem
.HeaderNav-link
	color white
	display block
	font-size 2rem
	line-height 3rem
	padding 0 .5rem
	position relative
	text-decoration none
	text-shadow none
	transition .3s background-color
	&:hover
		background-color rgba(black, .23)
.HeaderNav-subList
	display none
	padding 0
	position absolute
	right 0
	text-align left
	width 100%
	z-index 1
.HeaderNav-subItem
	background-color rgba(black, .9)
	border-left 1px solid rgba(255,255,255,0.1)
	border-top 1px solid rgba(255,255,255,0.1)
	height 3rem
	list-style none
	&:nth-child(3)
		border-bottom 1px solid rgba(255,255,255,0.1)
.HeaderNav-subLink
	color white
	display block
	font-size 1.2rem
	line-height 3rem
	padding 0 .5rem
	text-decoration none
	transition .3s background-color
	transition .3s color
	&:hover
		background-color rgba(black, .5)
		color yellow
.HeaderNav-subIcon			
	color white
	font-size 1.5rem
	padding-right .5rem
	text-shadow none
/*estilos del avatar en el menu el header*/
.Header-imageContainer
	margin 0
	padding 0
.Header-avatar
	cursor pointer
	height 3rem
	opacity .7
	transition .3s opacity
	vertical-align top
	width 3rem
.avatar-float
	float left
/*main menu */
.MainMenu
	background-color rgba(black, .9)	
	bottom 0
	display none
	left 0
	position absolute
	right 0
	text-shadow none
	top 3em
	z-index 1
.MainMenu-list
	margin 0
	padding 0
.MainMenu-item
	border-bottom 1px solid rgba(255,255,255,0.1)
	margin 0
	padding 0
.MainMenu-link
	/*color white*/
	color yellow
	display block
	height 2.5em
	line-height 2.5em
	text-decoration none
	transition .3s background-color
	transition .3s color
	vertical-align top
	&:hover
		background-color rgba(black, .7)
		/*color yellow*/
		color white
.MainMenu-icon
	background-color rgba(black, .5)
	color white
	display inline-block
	font-size 1.5rem
	line-height 2.5rem
	text-align center
	text-decoration none
	text-shadow none
	transition .3s background
	width 3rem
.iconDrop
	float right
	height 2.5em
	line-height 2.5em
	width 2.5em

/* sub menus del menu principal*/
.MainMenu-subList
	background-color rgba(black, .5)
	display none
	list-style none
	margin 0
	padding 0
.MainMenu-subItem
	height 2em
	list-style none
	margin-left 3.5em
.MainMenu-sublink
	color white
	display block
	line-height 2em
	text-decoration none
	transition 3s text-decoration
	&:hover
		text-decoration underline
.Content
	bottom 0
	left 15em
	right 0
	top 3em
	vertical-align top
.Notification
	border-bottom 1px solid rgba(255,255,255,0.1)
	height 2.59em
	line-height 2.59em
.Page-title
	display inline-block
	font-weight 200
	margin 0
	margin-left .5em
	padding 0
.Breadcrumb
	display none
	float right
	margin 0
	padding 0
	padding-right 1em
.Breadcrumb-item
	display inline-block
	list-style none
.Breadcrumb-slash
	&:after
		Content "/"
		padding 0 .5em
.Breadcrumb-link
	color white
	font-size 1em
	text-decoration none
	transition .3s color
	&:hover
		color yellow
/*short cuts*/
.ShortCuts-area
	border-bottom 1px solid rgba(255,255,255,0.1)
	padding 1em .5em
	text-shadow none
.ShortCut-item
	background rgba(black, .35)
	display inline-block
	height 5em
	margin-left 1%
	overflow hidden
	position relative
	width 48%
.ShortCut-count
	padding-left .2em
	font-size 2em
	margin 0
	font-weight 300
	font-family monospace
.ShortCut-description
	padding-left .2em
	font-size 1.5em
	margin 0
.ShortCut-icon
	color rgba(black, .35)
	display inline-block
	font-size 5em
	position absolute
	right 0
	top 0

/*panels*/
.Panel 
	margin .5em .5em 0 .5em
	position relative
	
.Panel-title-dark
.Panel-footer-dark
	background-color rgba(black, .35)
	box-shadow 0 0 5px rgba(black, .15)
	font-size .7em
	font-weight 200
	height 1.5rem
	line-height 1.5rem
	margin 0
	padding-left .5em
	text-align left
	text-transform uppercase
.Panel-content-light
.Panel-content-dark
	background-color rgba(black, .1)
	font-size 1em
	padding .5em .5em
.Panel-content-dark
	background-color rgba(black, .35)
.Panel-menu
	position absolute
	right 0
	top 0
.Panel-menuList
	height 1.5rem
	margin 0
	padding 0
.Panel-menuItem
	background-color rgba(black, .6)
	height 1.5rem
	list-style none
	padding 0 .2rem
	position relative
.Panel-menuLink
	color white
	display block
	line-height 1.5rem
	text-decoration none
	transition .3s color
	&:hover
		color yellow
.Panel-link 
	text-decoration none
	color white
	text-shadow none
	transition .3s text-decoration
	&:hover
		text-decoration underline
.Panel-container-image
	margin 0
	padding 0
.Panel-image
	margin 0
	width 100%

.Login-container
	margin 3em 0
	width 100%



/*drop downs box*/	
.DropDown-list
	background red
	background-color rgba(white, .6)
	display none
	margin 0
	padding 0
	position absolute
	right 0
	top 1.5rem
	width 10rem
.DropDown-item
	display block
	height 1.5rem
	list-style none
	margin 0
	padding .2rem
	text-shadow none
.DropDown-link
	color black
	display block
	height 1.5rem
	line-height 1.5rem
	text-decoration none
	transition .3s text-decoration
	&:hover
		text-decoration underline


/*forms*/
.Form
	margin 0
	padding 0
.Form-group
	margin-bottom 0
	padding .5em
.Form-label
	cursor pointer
	display inline-block
	font-size .7em
	font-weight 200
	margin-bottom .5em
	text-transform uppercase
.Form-control
	background-color rgba(black, 0.05)
	border 1px solid rgba(white, .3)
	box-sizing border-box
	display block
	font-size 1em
	font-weight 200
	height 2em
	outline none
	padding-left .5em
	transition .3s background 
	transition .3s border
	width 100% 
.Form-input-vertical
	padding-left .5em
	&:focus
		background rgba(black 0 )
		border 1px solid rgba(white, .4)
.Form-select
	cursor context-menu
	line-height normal !important
	text-indent 1px
.Form-option
	background-color rgba(black, .9)
	margin .5em 0
.Form-radio
	color red
	display inline-block
	height 1.5em
	line-height 1.5em
	vertical-align top
	width 1.2em
.Button
	border 0
	cursor pointer
	display inline-block
	font-weight 200
	height 2em
	line-height 2em
	padding 0 .5em
	text-decoration none
	text-transform uppercase
	transition 0.2s background-color
	vertical-align top
	/*zoom 1*/
	&:active
		transform scale(.95)
.BTN-form
	background linear-gradient(to bottom, rgba(black,.2) 0%, rgba(black,1) 100%)
	color white
	transition .3s color
	&:hover
		box-shadow 0 0 3px rgba(white,.4)
		color yellow
		text-shadow 0 0 3px rgba(white,.4)
	&:focus
		outline 1px solid rgba(white, .35)
		
@media screen and (min-width:480px)
	.u-hidden-s
		display none
@media screen and (min-width:640px)
	/*body
		background url('../skins/skin-blue.jpg')
		background-attachment fixed
		background-size 100% 100%
		height 3rem*/
	.Header-box
		display inline-block
	.Header-brand
		width 13rem
	.HeaderNav
		float right
	.avatar-float
		float right
	.Login-container
		margin 3em auto
		width 80%
		
@media screen and (min-width:768px)
	.Content
		display inline-block
		position absolute
		overflow auto
	.MainMenu
		display inline-block
	.Breadcrumb
		display inline-block
	.MainMenu
		background-color rgba(black, .3)
		top 3.05em
		width 15em
	.Header-brand
		position initial
	.Header-DropBottom
		display none
	.MainMenu-link
		color white
		transition .3s color
		&:hover
			color yellow
	.Login-container
		margin 3em auto
		width 55%

@media screen and (min-width:1000px)
	.ShortCut-item
		margin-left 1.5%
		width 23%
	.Login-container
		margin 3em auto
		width 35%


	
